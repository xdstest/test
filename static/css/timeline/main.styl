.i-timeline
	margin 20px auto
	display flex
	flex-wrap wrap
	justify-content space-between

	&__item
		margin-bottom 5%
		width 30%

		@media (max-width: 768px)
			&
				margin-bottom 10%
				width 45%

		@media (max-width: 450px)
			&
				margin-bottom 20%
				width 100%

	&__load-more
		margin 20px 0
		text-align center

		&__spin
			animation spin 1000ms infinite linear


@keyframes spin {
    0% {
        transform rotate(0deg)
    }
    100% {
        transform rotate(359deg)
    }
}